{
	"extends": "./.svelte-kit/tsconfig.json",

	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": false,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$helpers": ["src/helpers"],
			"$helpers/*": ["src/helpers/*"],
			"$types": ["src/types"]
		}
	}
}
